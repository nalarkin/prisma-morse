{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "baseUrl": "./",
    "pretty": true,
    "paths": {
      "@/*": [ "src/*"],
    },
    "typeRoots": [
      "./node_modules/.prisma/client/index.d.ts",
      "./node_modules/@types"
    ]
  },
    "include": [
      "./src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
}
