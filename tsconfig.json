{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "typeRoots": [
      "./src/generated",
      "./node_modules/.prisma/client/index.d.ts",
      "./node_modules/@types"
    ]
  },
    "include": [
      "./src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
}
