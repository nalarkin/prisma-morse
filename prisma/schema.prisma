model User {
  id             Int            @id @default(autoincrement())
  createdAt      DateTime       @default(now())
  email          String         @unique
  password       String
  unsafePassword String
  firstName      String?
  lastName       String?
  role           Role           @default(USER)
  serializables  Serializable[]
  transactions   Transaction[]
}

model Consumable {
  id           String        @id @default(cuid())
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  name         String
  count        Int
  type         ItemType      @default(CONSUMABLE)
  description  String?
  guide        String?
  photo        String?
  transactions Transaction[]
}

model Serializable {
  id            String        @id @default(cuid())
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  name          String
  serial_number String
  brand         String?
  status        ItemStatus
  type          ItemType      @default(DEVICE)
  project       String?
  description   String?
  guide         String?
  photo         String?
  renter        User?         @relation(fields: [userId], references: [id])
  userId        Int?
  transactions  Transaction[]
  version       Int           @default(0)
}

model Transaction {
  id             String           @id @default(cuid())
  createdAt      DateTime         @default(now())
  consumable     Consumable?      @relation(fields: [consumableId], references: [id])
  consumableId   String?
  serializable   Serializable?    @relation(fields: [serializableId], references: [id])
  serializableId String?
  user           User?            @relation(fields: [userId], references: [id])
  userId         Int?
  type           TransactionType?
}

enum TransactionType {
  CHECKOUT
  RETURN
  CONSUME
  CREATE
  DELETE
  EDIT
}

enum Role {
  USER
  ADMIN
}

enum ItemType {
  TOOL
  DEVICE
  CONSUMABLE
}

enum ItemStatus {
  BROKEN
  USABLE
  SCRAP
  IN_REPAIR
}
