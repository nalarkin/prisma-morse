model User {
  id             Int            @id @default(autoincrement())
  createdAt      DateTime       @default(now())
  email          String         @unique
  password       String
  unsafePassword String
  name           String?
  role           Role           @default(USER)
  Consumable     Consumable[]
  Serializable   Serializable[]
  Transaction    Transaction[]
}

model Consumable {
  id          String        @id @default(cuid())
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  name        String
  count       Int
  type        ItemType      @default(CONSUMABLE)
  description String?
  guide       String?
  photo       String?
  User        User?         @relation(fields: [userId], references: [id])
  userId      Int?
  Transaction Transaction[]
}

model Serializable {
  id            String        @id @default(cuid())
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  name          String
  serial_number String
  brand         String?
  status        ItemStatus
  type          ItemType      @default(DEVICE)
  project       String?
  description   String?
  guide         String?
  photo         String?
  User          User?         @relation(fields: [userId], references: [id])
  userId        Int?
  Transaction   Transaction[]
}

model Transaction {
  id             String           @id @default(cuid())
  createdAt      DateTime         @default(now())
  Consumable     Consumable?      @relation(fields: [consumableId], references: [id])
  consumableId   String?
  Serializable   Serializable?    @relation(fields: [serializableId], references: [id])
  serializableId String?
  User           User?            @relation(fields: [userId], references: [id])
  userId         Int?
  type           TransactionType?
}

enum TransactionType {
  CHECKOUT
  RETURN
  CONSUME
  CREATE
  DELETE
  EDIT
}

enum Role {
  USER
  ADMIN
}

enum ItemType {
  TOOL
  DEVICE
  CONSUMABLE
}

enum ItemStatus {
  BROKEN
  USABLE
  SCRAP
  IN_REPAIR
}
